# Bitwarden API配置
# Bitwarden服务器地址
BW_HOST=https://vault.bitwarden.com

# Bitwarden账号邮箱
BW_EMAIL=your-email@example.com

# Bitwarden账号密码
BW_PASSWORD=your-password

# 备份加密密钥 (用于加密备份文件)
BACKUP_ENCRYPTION_KEY=your-encryption-key

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# 备份格式 (支持 json)
BACKUP_FORMAT=json

# 备份计划 (Cron格式)
BACKUP_SCHEDULE=0 */8 * * *

# 时区设置
TZ=Asia/Shanghai

# 语言设置
LC_ALL=en_US.UTF-8
LANG=en_US.UTF-8
LANGUAGE=en_US:en

# 是否保留未加密的备份文件
# true: 保留原始文件 (.json), 不创建加密文件
# false: 创建加密文件 (.gpg), 删除原始文件
AUTO_DECRYPT=false
